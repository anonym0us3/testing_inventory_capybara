<%= form_for [@product, @item], html: {class: "input-group"} do |f| %>
  <div class='form-group'>
    <%= f.label :size %>
    <%= f.select :size, ['xs', 's', 'm', 'l', 'xl', 'xxl'], include_blank: false %>
  </div>
  <div class='form-group'>
    <%= f.label :color %>
    <%= f.text_field :color, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :status %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :submit %>
    <%= f.submit 'Save Item' ,class: 'form-control' %>
  </div>
<% end %>
