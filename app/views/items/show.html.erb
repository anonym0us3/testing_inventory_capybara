<h1>Item for product: <small><%= @product.name %></small></h1>

<table class="table table-hover">
  <thead>
    <tr><th>id</th><th>size</th><th>color</th><th>status</th><th>Last Updated</th></tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to @item.id, product_item_path(@product, @item) %></td>
      <td><%= @item.size %></td>
      <td><%= @item.color %></td>
      <td><%= @item.status %></td>
      <td><%= time_ago_in_words @item.updated_at %> ago</td>
    </tr>
  </tbody>
</table>

<hr>
<p>
  <%= link_to "Edit Item", edit_product_item_path(@product, @item), class: "btn btn-default" %>
  <%= link_to "Delete Item", product_item_path(@product, @item), method: :delete, class: "btn btn-default" %>
</p>

<%= link_to  "Return to product", @product %>
